[user]
  name = George Bashi
  email = george.bashi@semantico.com
[color]
  ui = auto
[core]
  whitespace = tab-in-indent,tabwidth=2
  fsyncobjectfiles = true
  preloadindex = true
  pager = less
[diff]
  mnemonicprefix = true
  renames = copy
[pack]
  threads = 0
[rerere]
  enabled = 1
[branch "master"]
  remote = origin
  merge = refs/heads/master
[url "git@github.com:"]
  insteadOf = "gh:"
  pushInsteadOf = "github:"
  pushInsteadOf = "git://github.com/"
  pushInsteadOf = "https://github.com/"
[url "gitolite@git.semantico.net:"]
  insteadOf = "s:"
[merge]
  log = true
  tool = vimdiff
[alias]
	lol = log --graph --decorate --oneline
  lola = log --graph --decorate --oneline --all
